<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ben.medtracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewMedicationListActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".AddMedicationActivity"
            android:label="@string/add_medication_activity_name" />
        <activity
            android:name=".ViewMedicationActivity"
            android:label="@string/title_activity_view_medication"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UpdateMedicationActivity" />
        <activity android:name=".AddLogEntryActivity" />
        <activity android:name=".ViewLogListActivity" />

    </application>

</manifest>