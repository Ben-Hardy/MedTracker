<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/log_med_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="125dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Medication" />

    <TextView
        android:id="@+id/log_dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="125dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_med_name"
        tools:text="Dosage!" />

    <TextView
        android:id="@+id/log_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_dosage"
        tools:text="01/01/1111" />

    <TextView
        android:id="@+id/log_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_date"
        tools:text="00:00" />

    <TextView
        android:id="@+id/log_doc_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:maxWidth="180dp"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/log_date"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Doctors's Notes go here Doctors's Notes go here Doctors's Notes go here Doctors's Notes go here" />
</android.support.constraint.ConstraintLayout>